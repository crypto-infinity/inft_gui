<script src="js/scrollIt.min.js"></script>
<script src="js/wow.min.js"></script>
<script>
    wow = new WOW();
    wow.init();
    $(document).ready(function (e) {
        var opened_tab = "";

        //navbar
        $('#navbar-expander').on('click', function (e) {
            if ($('#sidenav').css('width') == '0px') {
                $('#sidenav').css('width', '250');
                document.getElementById("main").style.marginLeft = "250px";
            } else if ($('#sidenav').css('width') == '250px') {
                $('#sidenav').css('width', '0');
                document.getElementById("main").style.marginLeft = "0px";
            }
        });

        $('#nav-closer').on('click', function (e) {
            $('#sidenav').css('width', '0');
            document.getElementById("main").style.marginLeft = "0px";
        });

        /*
            Profiles Tab 
        */

        $('#profiles').on('click', function (e) {
            if (opened_tab != "profile") {
                $.get('./views/profile.ejs', function (template) {
                    // Compile the EJS template.
                    var base_template = ejs.compile(template);
    
                    $.get('/profile', function (data) {
                    // Generate the html from the given data.
                        var html = base_template(data);
                        opened_tab = "profile";
                        $('#main-frame').html(html);
                    });
                });
            }
        });

        /*
            End Profiles Tab 
        */

        /*
            NFTs Tab 
        */

        $('#nfts').on('click', function (e) {
            $.get('./views/profile.ejs', function (template) {
                // Compile the EJS template.
                var base_template = ejs.compile(template);

                $.get('/profile', function (data) {
                // Generate the html from the given data.
                    var html = base_template(data);
                    $('#main-frame').html(html);
                });
            });
        });

        /*
            End NFTs Tab 
        */

        /*
            Marketplace Tab 
        */

        $('#profiles').on('click', function (e) {
            $.get('./views/profile.ejs', function (template) {
                // Compile the EJS template.
                var base_template = ejs.compile(template);

                $.get('/profile', function (data) {
                // Generate the html from the given data.
                    var html = base_template(data);
                    $('#main-frame').html(html);
                });
            });
        });

        /*
            End Marketplace Tab 
        */
    });

    /* Dialog Methods */
    $('#dialog-close').on('click', function (e) {
        $('#dialog-title').text('');
        $('#dialog-text').text('');
        enableScroll();
        window.dialog.close();
    });
    function openModal(title, text) {
        $('#dialog-title').text(title);
        $('#dialog-text').text(text);
        disableScroll();
        window.dialog.showModal();
    }
    function disableScroll() {
        // Get the current page scroll position
        scrollTop =
            window.pageYOffset || document.documentElement.scrollTop;
        scrollLeft =
            window.pageXOffset || document.documentElement.scrollLeft,

            // if any scroll is attempted,
            // set this to the previous value
            window.onscroll = function () {
                window.scrollTo(scrollLeft, scrollTop);
            };
    }
    function enableScroll() {
        window.onscroll = function () { };
    }
    /* End Dialog Methods */
</script>